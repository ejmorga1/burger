<img src="/assets/images/burger.png" alt="Burger" width="300px">


<h1>Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col"> 
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </div>
        <div class="col">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burger/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<form>
  <div class="form-group">
    <input type="text" id="inputBurger">
  </div>

  <button type="submit">Submit</button>
</form>

<p>Enter a burger you want to eat</p>
<p>Click the "Submit" button</p>
